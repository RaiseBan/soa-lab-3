<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="musicBandPU" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/MusicBandDS</jta-data-source>

        <!-- Explicitly list entity classes -->
        <class>com.musicband.api.model.MusicBand</class>
        <class>com.musicband.api.model.Coordinates</class>
        <class>com.musicband.api.model.Label</class>

        <properties>
            <!-- Hibernate properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Connection pool -->
            <property name="hibernate.connection.pool_size" value="10"/>

            <!-- Enable second level cache (optional) -->
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
        </properties>
    </persistence-unit>
</persistence>